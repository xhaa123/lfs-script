pkgbuild_version=5
pkgname=libqmi
pkgver=1.22.4

dependencies=(
    "!$pkgname"
	'glib'
	'libmbim'
)
sources=(
	"http://www.freedesktop.org/software/libqmi/${pkgname}-${pkgver}.tar.xz"
)

sha1sums=(
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr --disable-static
}


lfs_me_install() {
	cd "${build_dir}/${pkgname}-${pkgver}"
	make DESTDIR="$fakeroot_dir" install
}

