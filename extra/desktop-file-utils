pkgbuild_version=5
pkgname=desktop-file-utils
pkgver=0.24

dependencies=(
    "!$pkgname"
	'glib'
)
sources=(
	"https://freedesktop.org/software/desktop-file-utils/releases/${pkgname}-${pkgver}.tar.xz"
)

sha1sums=(
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr
}

lfs_me_install() {
	cd "${build_dir}/${pkgname}-${pkgver}"
	make DESTDIR="$fakeroot_dir"  install
}

